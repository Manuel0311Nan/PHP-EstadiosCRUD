{% extends 'stadium/baseStadium.html.twig'%}
    {% block contenido %}
          <div class="container">
              <div class="row">
                  <div class="col text-center">
                    <h2>{{ stadium.name }}</h2>
                </div>
                  <div class="col">
                      <img class="image" src="{{ stadium.image }}">
                  </div>
                  <div class="col">
                    <h3 class="titleDetail"> Ciudad:</h3>
                    <h3> {{ stadium.city }}</h3>
                    </div>
                    <div class="col">
                        <h3 class="titleDetail"> Capacidad:</h3>
                        <h3> {{ stadium.capacity }}</h3>
                        </div>
                        <div class="col">
                            <h3 class="titleDetail"> Equipo:</h3>
                            <h3> {{ stadium.team }}</h3>
                            </div>
                  </div>
          </div>
      {% endblock %}
      